                                <i class="fas fa-briefcase fa-2x mb-2 text-primary"></i>
                                <h6>Employment</h6>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 col-lg-2">
                        <div class="card text-center h-100 category-card" onclick="filterSchemesByCategory('Women')">
                            <div class="card-body">
                                <i class="fas fa-female fa-2x mb-2" style="color: #ec4899;"></i>
                                <h6>Women</h6>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Impact Stats -->
        <section class="py-5 stats-section">
            <div class="container">
                <div class="row text-center">
                    <div class="col-md-4">
                        <h2 class="fw-bold">50+</h2>
                        <p>Government Schemes</p>
                    </div>
                    <div class="col-md-4">
                        <h2 class="fw-bold">100%</h2>
