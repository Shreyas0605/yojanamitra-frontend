    <!-- ADMIN PANEL PAGE -->
    <div id="admin-page" class="page-section" style="display:none;">
        <div class="container mt-5">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-cog me-2"></i>Admin Panel</h2>
                <button class="btn btn-success" onclick="showAddSchemeForm()">
                    <i class="fas fa-plus me-2"></i>Add New Scheme
                </button>
            </div>

            <!-- Add/Edit Scheme Form -->
            <div id="scheme-form-container" class="card mb-4" style="display:none;">
                <div class="card-header">
                    <h5 class="mb-0" id="scheme-form-title">Add New Scheme</h5>
                </div>
                <div class="card-body">
                    <form id="scheme-form">
                        <input type="hidden" id="scheme-id" name="id">
                        <div class="row mb-3">
                            <div class="col-md-8">
                                <label class="form-label">Scheme Name *</label>
                                <input type="text" class="form-control" name="name" required>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Category *</label>
                                <select class="form-select" name="category" required>
                                    <option value="">Select</option>
                                    <option value="Agriculture">Agriculture</option>
                                    <option value="Healthcare">Healthcare</option>
                                    <option value="Education">Education</option>
                                    <option value="Housing">Housing</option>
                                    <option value="Employment">Employment</option>
                                    <option value="Women">Women Empowerment</option>
                                </select>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Description *</label>
                            <textarea class="form-control" name="description" rows="3" required></textarea>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Benefits *</label>
                            <textarea class="form-control" name="benefits" rows="2" required></textarea>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Eligibility Criteria</label>
                            <textarea class="form-control" name="eligibility" rows="2"></textarea>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Application Link</label>
                            <input type="url" class="form-control" name="applicationLink" placeholder="https://...">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Target Audience</label>
                            <input type="text" class="form-control" name="targetAudience"
                                placeholder="e.g., Farmers, Students">
                        </div>

                        <hr>
                        <h6 class="mb-3">Eligibility Criteria (Optional)</h6>

                        <div class="row mb-3">
                            <div class="col-md-3">
                                <label class="form-label">Min Age</label>
                                <input type="number" class="form-control" name="minAge">
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">Max Age</label>
                                <input type="number" class="form-control" name="maxAge">
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">Min Income (₹)</label>
                                <input type="number" class="form-control" name="minIncome">
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">Max Income (₹)</label>
                                <input type="number" class="form-control" name="maxIncome">
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Allowed Genders (comma-separated or "All")</label>
                            <input type="text" class="form-control" name="allowedGenders"
                                placeholder="Male, Female, Other or All">
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Allowed Occupations (comma-separated or "All")</label>
                            <input type="text" class="form-control" name="allowedOccupations"
                                placeholder="Farmer, Student or All">
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Allowed Castes (comma-separated or "All")</label>
                            <input type="text" class="form-control" name="allowedCastes"
                                placeholder="General, OBC, SC, ST or All">
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Allowed States (comma-separated or "All")</label>
                            <input type="text" class="form-control" name="allowedStates"
                                placeholder="Maharashtra, Delhi or All">
                        </div>

                        <div class="text-end">
                            <button type="button" class="btn btn-secondary me-2"
                                onclick="hideSchemeForm()">Cancel</button>
                            <button type="submit" class="btn btn-primary">Save Scheme</button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Schemes List -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">All Schemes</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Category</th>
                                    <th>Target Audience</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody id="admin-schemes-list">
                                <tr>
                                    <td colspan="4" class="text-center">Loading...</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Chatbot Widget -->
    <button class="chat-toggle-btn" onclick="toggleChat()">
        <i class="fas fa-comment-dots"></i>
    </button>

    <div id="chatbox" class="chatbox" style="display:none;">
        <div class="chat-header">
            <span><i class="fas fa-headset me-2"></i>YojanaMitra Assistant</span>
            <button class="btn btn-sm btn-outline-light border-0" onclick="toggleChat()"><i
                    class="fas fa-times"></i></button>
        </div>
        <div class="chat-messages" id="chat-messages">
            <div class="message bot">
                Hello! I can help you find schemes and answer your questions. How can I assist you today?
            </div>
        </div>
        <div class="chat-input-area">
            <div class="input-group">
                <input type="text" id="chat-input" class="form-control" placeholder="Type your message..."
                    onkeypress="if(event.key==='Enter') sendChatMessage()">
                <button class="btn btn-primary" onclick="sendChatMessage()"><i class="fas fa-paper-plane"></i></button>
            </div>
            <small class="text-muted mt-1 d-block text-center" style="font-size: 10px;">Powered by Gemini
                AI</small>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // --- State Management ---
        let currentUser = null;
        let isAdmin = false;
        let currentLanguage = 'en'; // Default to English

        // --- Language Switching ---
        const translations = {
            en: {
                'Home': 'Home',
                'Schemes': 'Schemes',
                'Check Eligibility': 'Check Eligibility',
                'Login': 'Login',
                'Register': 'Register',
                'Profile': 'Profile',
                'Logout': 'Logout',
                'Admin Panel': 'Admin Panel'
            },
            kn: {
                'Home': 'ಮುಖಪುಟ',
                'Schemes': 'ಯೋಜನೆಗಳು',
                'Check Eligibility': 'ಅರ್ಹತೆ ಪರಿಶೀಲಿಸಿ',
                'Login': 'ಲಾಗಿನ್',
                'Register': 'ನೋಂದಣಿ',
                'Profile': 'ಪ್ರೊಫೈಲ್',
                'Logout': 'ಲಾಗ್ಔಟ್',
                'Admin Panel': 'ನಿರ್ವಾಹಕ ಪ್ಯಾನೆಲ್'
            }
        };

        function toggleLanguage() {
            currentLanguage = currentLanguage === 'en' ? 'kn' : 'en';
            localStorage.setItem('yojana_language', currentLanguage);
            applyTranslations();
        }

        function applyTranslations() {
            const lang = currentLanguage;

            // Update navigation links
            document.querySelectorAll('[data-en]').forEach(el => {
                const enText = el.getAttribute('data-en');
                const knText = el.getAttribute('data-kn');
                if (lang === 'kn' && knText) {
                    el.textContent = knText;
                } else if (enText) {
                    el.textContent = enText;
                }
            });

            // Update language toggle button text
            const langToggleText = document.getElementById('lang-text');
            if (langToggleText) {
                langToggleText.textContent = lang === 'en' ? 'ಕನ್ನಡ' : 'English';
            }
        }

        // Load saved language preference
        function loadLanguagePreference() {
            const savedLang = localStorage.getItem('yojana_language');
            if (savedLang) {
                currentLanguage = savedLang;
                applyTranslations();
            }
        }

        // --- Navigation ---
        function showPage(pageId) {
            document.querySelectorAll('.page-section').forEach(el => el.style.display = 'none');
            document.getElementById(pageId + '-page').style.display = 'block';

            const navbarCollapse = document.getElementById('navbarNav');
            if (navbarCollapse.classList.contains('show')) {
                new bootstrap.Collapse(navbarCollapse).hide();
            }

            if (pageId === 'schemes') loadSchemes();
            if (pageId === 'profile') loadProfile();
            if (pageId === 'admin') loadAdminSchemes();
        }

        function updateAuthUI() {
            if (isAdmin) {
                document.querySelectorAll('.guest-only, .user-only').forEach(el => el.style.display = 'none');
                document.querySelectorAll('.admin-only').forEach(el => el.style.display = 'block');
            } else if (currentUser) {
                document.querySelectorAll('.guest-only, .admin-only').forEach(el => el.style.display = 'none');
                document.querySelectorAll('.user-only').forEach(el => el.style.display = 'block');
            } else {
                document.querySelectorAll('.user-only, .admin-only').forEach(el => el.style.display = 'none');
                document.querySelectorAll('.guest-only').forEach(el => el.style.display = 'block');
            }
        }

        // --- Authentication ---
        async function checkAuth() {
            try {
                const res = await fetch('/api/user');
                if (res.ok) {
                    const data = await res.json();
                    currentUser = data.user;
                    isAdmin = false;
                } else {
                    currentUser = null;
                    isAdmin = false;
                }
                updateAuthUI();
            } catch (e) {
                console.error("Auth check failed", e);
            }
        }

        document.getElementById('login-form').onsubmit = async (e) => {
            e.preventDefault();
            const formData = new FormData(e.target);
            const data = Object.fromEntries(formData.entries());

            try {
                const res = await fetch('/api/login', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });
                const result = await res.json();
                if (res.ok) {
                    currentUser = result.user;
                    isAdmin = false;
                    updateAuthUI();
                    showPage('home');
                    alert('Login Successful!');
                } else {
                    alert(result.error);
                }
            } catch (e) {
                alert('Login failed');
            }
        };

        document.getElementById('admin-login-form').onsubmit = async (e) => {
            e.preventDefault();
            const formData = new FormData(e.target);
            const data = Object.fromEntries(formData.entries());

            try {
                const res = await fetch('/api/admin/login', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });
                const result = await res.json();
                if (res.ok) {
                    currentUser = null;
                    isAdmin = true;
                    updateAuthUI();
                    showPage('admin');
                    alert('Admin Login Successful!');
                } else {
                    alert(result.error);
                }
            } catch (e) {
                alert('Admin login failed');
            }
        };

        document.getElementById('register-form').onsubmit = async (e) => {
            e.preventDefault();
            const formData = new FormData(e.target);
            const data = Object.fromEntries(formData.entries());

            try {
                const res = await fetch('/api/register', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });
                const result = await res.json();
                if (res.ok) {
                    alert('Registration Successful! Please Login.');
                    showPage('login');
                } else {
                    alert(result.error);
                }
            } catch (e) {
                alert('Registration failed');
            }
        };

        async function logout() {
            await fetch('/api/logout');
            currentUser = null;
            isAdmin = false;
            updateAuthUI();
            showPage('home');
        }

        // --- Eligibility Checker ---
        document.getElementById('eligibility-form').onsubmit = async (e) => {
            e.preventDefault();
            const formData = new FormData(e.target);
            const data = Object.fromEntries(formData.entries());

            // Convert numeric fields
            data.age = parseInt(data.age);
            data.income = parseInt(data.income);

            try {
                const res = await fetch('/api/check-eligibility', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });
                const result = await res.json();

                const resultsDiv = document.getElementById('eligibility-results');
                const listDiv = document.getElementById('eligibility-schemes-list');

                if (result.schemes.length === 0) {
                    listDiv.innerHTML = '<p class="text-muted">No schemes found matching your criteria. Try adjusting your filters.</p>';
                } else {
                    listDiv.innerHTML = '';
                    result.schemes.forEach(scheme => {
                        const card = `
                        <div class="card mb-3">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="flex-grow-1">
                                        <h5 class="card-title">${scheme.name}</h5>
                                        <span class="badge bg-info mb-2">${scheme.category || 'General'}</span>
                                        <span class="badge bg-success ms-2">${scheme.matchPercentage}% Match</span>
                                    </div>
                                </div>
                                <p class="card-text text-muted mt-2">${scheme.description}</p>
                                <p class="small"><strong>Benefits:</strong> ${scheme.benefits}</p>
                                <p class="small"><strong>Eligibility:</strong> ${scheme.eligibility || 'See details on application page'}</p>
                                <a href="${scheme.applicationLink || '#'}" target="_blank" class="btn btn-primary">
                                    <i class="fas fa-external-link-alt me-2"></i>Apply Now
                                </a>
                            </div>
                        </div>
                    `;
                        listDiv.innerHTML += card;
                    });
                }

                resultsDiv.style.display = 'block';
            } catch (e) {
                alert('Error checking eligibility');
            }
        };

        // --- Schemes ---
        function filterSchemesByCategory(category) {
            document.getElementById('category-filter').value = category;
            showPage('schemes');
            loadSchemes();
        }

        async function loadSchemes() {
            const query = document.getElementById('search-input').value;
            const category = document.getElementById('category-filter').value;
            const state = document.getElementById('state-filter').value;

            const params = new URLSearchParams({ q: query, category: category, state: state });
            const target = document.getElementById('schemes-list');
            target.innerHTML = '<div class="text-center"><div class="spinner-border text-primary"></div></div>';

            try {
                const res = await fetch(`/api/schemes?${params}`);
                const data = await res.json();

                target.innerHTML = '';
                if (data.schemes.length === 0) {
                    target.innerHTML = '<div class="col-12 text-center text-muted">No schemes found matching your criteria.</div>';
                    return;
                }

                data.schemes.forEach(scheme => {
                    const card = `
                    <div class="col-md-6 col-lg-4">
                        <div class="card h-100">
                            <div class="card-body">
                                <span class="badge bg-info mb-2">${scheme.category || 'General'}</span>
                                <h5 class="card-title">${scheme.name}</h5>
                                <p class="card-text text-muted small">${scheme.description.substring(0, 100)}...</p>
                                <p class="small"><strong>Benefits:</strong> ${scheme.benefits}</p>
                            </div>
                            <div class="card-footer bg-white border-top-0">
                                <a href="${scheme.applicationLink || '#'}" target="_blank" class="btn btn-sm btn-outline-primary w-100">View Details & Apply</a>
                            </div>
                        </div>
                    </div>
                `;
                    target.innerHTML += card;
                });
            } catch (e) {
                target.innerHTML = '<div class="text-danger text-center">Failed to load schemes.</div>';
            }
        }

        // --- Profile ---
        async function loadProfile() {
            if (!currentUser) return;
            const form = document.getElementById('profile-form');

            form.elements['name'].value = currentUser.name;
            form.elements['email'].value = currentUser.email;

            if (currentUser.profile) {
                form.elements['age'].value = currentUser.profile.age || '';
                form.elements['gender'].value = currentUser.profile.gender || '';
                form.elements['state'].value = currentUser.profile.state || '';
                form.elements['occupation'].value = currentUser.profile.occupation || '';
                form.elements['income'].value = currentUser.profile.income || '';
                form.elements['caste'].value = currentUser.profile.caste || 'General';
            }
        }

        document.getElementById('profile-form').onsubmit = async (e) => {
            e.preventDefault();
            const formData = new FormData(e.target);
            const data = Object.fromEntries(formData.entries());

            data.age = parseInt(data.age);
            data.income = parseInt(data.income);

            try {
                const res = await fetch('/api/profile', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });
                const result = await res.json();
                if (res.ok) {
                    currentUser = result.user;
                    alert('Profile Updated Successfully!');
                } else {
                    alert('Failed to update profile');
                }
            } catch (e) {
                alert('Error updating profile');
            }
        };

        // --- Admin Panel ---
        async function loadAdminSchemes() {
            const target = document.getElementById('admin-schemes-list');
            target.innerHTML = '<tr><td colspan="4" class="text-center">Loading...</td></tr>';

            try {
                const res = await fetch('/api/schemes');
                const data = await res.json();

                target.innerHTML = '';
                data.schemes.forEach(scheme => {
                    const row = `
                    <tr>
                        <td>${scheme.name}</td>
                        <td><span class="badge bg-info">${scheme.category || 'N/A'}</span></td>
                        <td>${scheme.targetAudience || 'N/A'}</td>
                        <td>
                            <button class="btn btn-sm btn-outline-primary me-2" onclick="editScheme(${scheme.id})">
                                <i class="fas fa-edit"></i> Edit
                            </button>
                            <button class="btn btn-sm btn-outline-danger" onclick="deleteScheme(${scheme.id})">
                                <i class="fas fa-trash"></i> Delete
                            </button>
                        </td>
                    </tr>
                `;
                    target.innerHTML += row;
                });
            } catch (e) {
                target.innerHTML = '<tr><td colspan="4" class="text-danger text-center">Failed to load schemes.</td></tr>';
            }
        }

        function showAddSchemeForm() {
            document.getElementById('scheme-form-title').textContent = 'Add New Scheme';
            document.getElementById('scheme-form').reset();
            document.getElementById('scheme-id').value = '';
            document.getElementById('scheme-form-container').style.display = 'block';
        }

        function hideSchemeForm() {
            document.getElementById('scheme-form-container').style.display = 'none';
        }

        async function editScheme(id) {
            try {
                const res = await fetch(`/api/schemes/${id}`);
                const data = await res.json();
                const scheme = data.scheme;

                document.getElementById('scheme-form-title').textContent = 'Edit Scheme';
                document.getElementById('scheme-id').value = scheme.id;

                const form = document.getElementById('scheme-form');
                form.elements['name'].value = scheme.name;
                form.elements['category'].value = scheme.category || '';
                form.elements['description'].value = scheme.description;
                form.elements['benefits'].value = scheme.benefits;
                form.elements['eligibility'].value = scheme.eligibility || '';
                form.elements['applicationLink'].value = scheme.applicationLink || '';
                form.elements['targetAudience'].value = scheme.targetAudience || '';
                form.elements['minAge'].value = scheme.criteria.minAge || '';
                form.elements['maxAge'].value = scheme.criteria.maxAge || '';
                form.elements['minIncome'].value = scheme.criteria.minIncome || '';
                form.elements['maxIncome'].value = scheme.criteria.maxIncome || '';
                form.elements['allowedGenders'].value = scheme.criteria.allowedGenders.join(', ');
                form.elements['allowedOccupations'].value = scheme.criteria.allowedOccupations.join(', ');
                form.elements['allowedCastes'].value = scheme.criteria.allowedCastes.join(', ');
                form.elements['allowedStates'].value = scheme.criteria.allowedStates.join(', ');

                document.getElementById('scheme-form-container').style.display = 'block';
            } catch (e) {
                alert('Error loading scheme details');
            }
        }

        async function deleteScheme(id) {
            if (!confirm('Are you sure you want to delete this scheme?')) return;

            try {
                const res = await fetch(`/api/schemes/${id}`, { method: 'DELETE' });
                if (res.ok) {
                    alert('Scheme deleted successfully');
                    loadAdminSchemes();
                } else {
                    alert('Failed to delete scheme');
                }
            } catch (e) {
                alert('Error deleting scheme');
            }
        }

        document.getElementById('scheme-form').onsubmit = async (e) => {
            e.preventDefault();
            const formData = new FormData(e.target);
            const data = Object.fromEntries(formData.entries());

            // Convert arrays
            data.allowedGenders = data.allowedGenders.split(',').map(s => s.trim()).filter(s => s);
            data.allowedOccupations = data.allowedOccupations.split(',').map(s => s.trim()).filter(s => s);
            data.allowedCastes = data.allowedCastes.split(',').map(s => s.trim()).filter(s => s);
            data.allowedStates = data.allowedStates.split(',').map(s => s.trim()).filter(s => s);

            // Convert numbers
            if (data.minAge) data.minAge = parseInt(data.minAge);
            if (data.maxAge) data.maxAge = parseInt(data.maxAge);
            if (data.minIncome) data.minIncome = parseInt(data.minIncome);
            if (data.maxIncome) data.maxIncome = parseInt(data.maxIncome);

            const schemeId = document.getElementById('scheme-id').value;
            const method = schemeId ? 'PUT' : 'POST';
            const url = schemeId ? `/api/schemes/${schemeId}` : '/api/schemes';

            try {
                const res = await fetch(url, {
                    method: method,
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });
                const result = await res.json();
                if (res.ok) {
                    alert(schemeId ? 'Scheme updated successfully' : 'Scheme created successfully');
                    hideSchemeForm();
                    loadAdminSchemes();
                } else {
                    alert(result.error || 'Failed to save scheme');
                }
            } catch (e) {
                alert('Error saving scheme');
            }
        };

        // --- Chatbot ---
        function toggleChat() {
            const chatbox = document.getElementById('chatbox');
            chatbox.style.display = chatbox.style.display === 'none' ? 'flex' : 'none';
        }

        async function sendChatMessage() {
            const input = document.getElementById('chat-input');
            const message = input.value.trim();
            if (!message) return;

            addMessage(message, 'user');
            input.value = '';

            const typingId = addMessage('Thinking...', 'bot');

            try {
                const res = await fetch('/api/chat', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ message: message })
                });
                const data = await res.json();

                document.getElementById(typingId).remove();
                addMessage(data.response, 'bot');
            } catch (e) {
                document.getElementById(typingId).remove();
                addMessage('Sorry, I encountered an error.', 'bot');
            }
        }

        function addMessage(text, sender) {
            const container = document.getElementById('chat-messages');
            const div = document.createElement('div');
            div.className = `message ${sender}`;
            div.textContent = text;
            div.id = 'msg-' + Date.now();
            container.appendChild(div);
            container.scrollTop = container.scrollHeight;
            return div.id;
        }

        // --- Init ---
        loadLanguagePreference();
        checkAuth();
        showPage('home');
    </script>
</body>

</html>